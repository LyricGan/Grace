<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="1080">
    <!-- 其中fromDegrees与toDegrees之差要是360的倍数，不然中间转的时候会跳一下，另外，这个差越大就转得越快 -->
    <shape
        android:shape="ring"
        android:thickness="3dp"
        android:useLevel="false">
        <gradient
            android:endColor="#007eff"
            android:startColor="#60007eff"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>
</rotate>