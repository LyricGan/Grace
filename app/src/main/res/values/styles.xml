<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Default">
        <item name="overlapAnchor">false</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <!-- 默认文本样式 -->
    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_default</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- 默认输入框样式 -->
    <style name="editText_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 默认分隔线样式 -->
    <style name="divider_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <!-- 默认列表样式 -->
    <style name="listView_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/color_divider</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

</resources>
