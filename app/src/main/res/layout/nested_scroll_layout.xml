<?xml version="1.0" encoding="utf-8"?>
<com.lyricgan.grace.samples.view.ELinkageScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <com.lyricgan.grace.samples.view.LWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.lyricgan.grace.samples.view.LLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#22ff0000"
            android:gravity="center"
            android:text="LinearLayout"
            android:textSize="22dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="LinearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#22ff0000"
            android:gravity="center"
            android:text="LinearLayout"
            android:textSize="22dp" />
    </com.lyricgan.grace.samples.view.LLinearLayout>

    <com.lyricgan.grace.samples.view.LRecyclerView
        android:id="@+id/recycler1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.lyricgan.grace.samples.view.LTextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="28dp" />

    <com.lyricgan.grace.samples.view.LRecyclerView
        android:id="@+id/recycler2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.lyricgan.grace.samples.view.LScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#22ff0000"
                android:gravity="center"
                android:text="ScrollView - 1"
                android:textSize="22dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#22ff0000"
                android:gravity="center"
                android:text="ScrollView - 2"
                android:textSize="22dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#22ff0000"
                android:gravity="center"
                android:text="ScrollView - 3"
                android:textSize="22dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#22ff0000"
                android:gravity="center"
                android:text="ScrollView - 4"
                android:textSize="22dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#22ff0000"
                android:gravity="center"
                android:text="ScrollView - 5"
                android:textSize="22dp" />
        </LinearLayout>
    </com.lyricgan.grace.samples.view.LScrollView>

    <com.lyricgan.grace.samples.view.LFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_in_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.lyricgan.grace.samples.view.LFrameLayout>
</com.lyricgan.grace.samples.view.ELinkageScrollLayout>