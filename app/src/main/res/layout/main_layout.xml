<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_title_bar" />

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_video_play"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/video_play"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:shape="rectangle"
        app:shape_radius="5dp"
        app:shape_solidColor="@color/holo_blue_light"
        app:shape_solidPressedColor="@color/holo_blue_dark" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        android:gravity="center_horizontal" />
</LinearLayout>
