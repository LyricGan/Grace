<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lyric.grace"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".base.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CollapsibleActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.SpannableActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.MovedViewActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.CircleProgressBarActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.LoadingActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.WebActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name=".activity.SwipeMenuSimpleActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name=".activity.SwipeMenuActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
    </application>

</manifest>